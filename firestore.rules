```rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return isSignedIn() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read: if isOwner(uid);
      // Disallow client-side balance edits; only functions can mutate.
      allow create: if isOwner(uid);
      allow update: if isOwner(uid) && !("balance" in request.resource.data.diff(resource.data).changedKeys());
      allow delete: if false;

      match /wallet_logs/{docId} { allow read: if isOwner(uid); allow write: if false; }
      match /spins/{docId} { allow read: if isOwner(uid); allow write: if false; }
    }
  }
}
